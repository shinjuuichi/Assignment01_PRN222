@model IEnumerable<BusinessLogic.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Category List</h1>

<form asp-action="Index" method="get" class="form-inline mb-3">
    <div class="form-group">
        <input type="text" name="searchString" value="@Context.Request.Query["searchString"]" class="form-control" placeholder="Search by name or description" />
        <input type="submit" value="Search" class="btn btn-primary ml-2" />
    </div>
</form>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().CategoryName)</th>
            <th>@Html.DisplayNameFor(model => model.First().CategoryDesciption)</th>
            <th>@Html.DisplayNameFor(model => model.First().IsActive)</th>
            <th>@Html.DisplayName("Parent Category")</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>
                <td>@Html.DisplayFor(modelItem => item.CategoryDesciption)</td>
                <td>@Html.DisplayFor(modelItem => item.IsActive)</td>
                <td>@(item.ParentCategory?.CategoryDesciption ?? "None")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.CategoryId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
